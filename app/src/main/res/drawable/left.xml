<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/xc_red"/>
            <solid android:color="@color/xc_red"/>
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="0dip" android:topLeftRadius="3dip" android:topRightRadius="0dip"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="0dip" android:topLeftRadius="3dip" android:topRightRadius="0dip"/>
        </shape>
    </item>

</selector>